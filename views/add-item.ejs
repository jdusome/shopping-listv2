<!-- Include shared header -->
<% include partials/header.ejs %>

<main class="row removescroll">
    <!-- Creates a column 4/12 wide on the left side -->
    <div class="col-md-4">
    </div>

    <!-- Creates a column 4/12 wide in the middle -->
    <div class="col-md-4 highlightborder1 whitefill toppaddingmin boxshade">
        <h1 class="alteritempadding"><%= title %></h1>

        <!-- POST - METHOD, the form will post to itself or other page -->
        <!-- Item form -->
        <form method= "post">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Name:</label>
                <input name="name" id="name" class="formmarginleft" required/>

            </div>
            <div class="form-group">
                <label for="department" class="col-sm-2 control-label">Department:</label>
                <select name="department" id="department" class="formmarginleft" >
                    <!-- add our different departments as options -->
                    <option>Bakery</option>
                    <option>Baking</option>a
                    <option>Beverage</option>
                    <option>Bulk</option>a
                    <option>Deli</option>a
                    <option>Frozen</option>a
                    <option>Grocery</option>
                    <option>Health</option>a
                    <option>Meat</option>a
                    <option>Produce</option>a
                    <option>Seafood</option>a
                    <option>Specialty</option>a
                    <option>Vegetarian</option>a
                </select>
                <button class="btn btn-success btn-lg buttonmarginbottom pull-right">Save</button>
            </div>
        </form>
    </div>

    <!-- Creates a column 4/12 wide on the right side -->
    <div class="col-md-4">
    </div>
</main>

<!-- Include shared footer -->
<% include partials/footer.ejs %>